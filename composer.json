{
  "require": {
    "php": "^8.1",
    "ext-mbstring": "*",
    "ext-gd": "*",
    "ext-dom": "*",
    "ext-iconv": "*",
    "dompdf/dompdf": "^2.0",
    "youniwemi/digital-invoice": "^0.2.1",
    "freemius/wordpress-sdk": "^2.10"
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/Youniwemi/zugferd-php"
    }
  ],
  "scripts": {
    "cs": "phpcs -s --standard=phpcs.xml .",
    "cbf": "phpcbf --standard=phpcs.xml .",
    "qit": "qit run:phpstan --zip ../../WORDPRESS_PLUGINS/woocommerce-einvoicing.woocommerce.zip woocommerce-einvoicing"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "woocommerce/qit-cli": "^0.3.4"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
